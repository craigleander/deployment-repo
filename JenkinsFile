pipeline {
    agent any
    
    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
        AWS_SESSION_TOKEN = credentials('aws-session-token')
        AWS_DEFAULT_REGION = 'us-east-1'
        GIT_REPO = 'https://github.com/craigleander/deployment-repo.git'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from GitHub repository...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: env.GIT_REPO,
                        credentialsId: 'github-credentials'
                    ]]
                ])
            }
        }
        
        stage('Verify Terraform') {
            steps {
                echo 'Verifying Terraform installation...'
                sh '''
                    # Check if Terraform is installed
                    if command -v terraform &> /dev/null; then
                        echo "✓ Terraform is installed:"
                        terraform version
                    else
                        echo "✗ ERROR: Terraform is not installed or not in PATH"
                        exit 1
                    fi
                '''
            }
        }
        
        stage('Terraform Init') {
            steps {
                echo 'Initializing Terraform...'
                withCredentials([
                    string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                ]) {
                    sh '''
                        export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
                        export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
                        export AWS_SESSION_TOKEN="${AWS_SESSION_TOKEN}"
                        export AWS_DEFAULT_REGION="us-east-1"
                        
                        # Check if env/dev.tfvars exists
                        if [ ! -f "env/dev.tfvars" ]; then
                            echo "ERROR: env/dev.tfvars file not found!"
                            echo "Current directory: $(pwd)"
                            echo "Files in current directory:"
                            ls -la
                            echo "Files in env directory:"
                            ls -la env/ || echo "env directory does not exist"
                            exit 1
                        fi
                        
                        echo "AWS credentials configured via environment variables"
                        echo "Initializing Terraform..."
                        terraform init
                    '''
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                echo 'Running Terraform plan...'
                withCredentials([
                    string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                ]) {
                    sh '''
                        export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
                        export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
                        export AWS_SESSION_TOKEN="${AWS_SESSION_TOKEN}"
                        export AWS_DEFAULT_REGION="us-east-1"
                        terraform plan -var-file=env/dev.tfvars
                    '''
                }
            }
        }
        
        stage('Terraform Apply') {
            steps {
                echo 'Applying Terraform configuration...'
                withCredentials([
                    string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                ]) {
                    sh '''
                        export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
                        export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
                        export AWS_SESSION_TOKEN="${AWS_SESSION_TOKEN}"
                        export AWS_DEFAULT_REGION="us-east-1"
                        terraform apply -var-file=env/dev.tfvars -auto-approve
                    '''
                }
            }
        }
    }
    
    post {
        success {
            echo 'Terraform deployment completed successfully!'
        }
        failure {
            echo 'Terraform deployment failed. Check logs for details.'
        }
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
    }
}
