pipeline {
    agent any
    
    tools {
        terraform 'terraform-1.6'
    }
    
    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
        AWS_SESSION_TOKEN = credentials('aws-session-token')
        AWS_DEFAULT_REGION = 'us-east-1'
        GIT_REPO = 'https://github.com/craigleander/deployment-repo.git'
        DRIFTS_API_URL = 'http://stackgen.34.170.32.248.nip.io/platform/drifts'
        APPSTACK_NAME = 'Cluster-Deployment-IoT'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from GitHub repository...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: env.GIT_REPO,
                        credentialsId: 'github-credentials'
                    ]]
                ])
            }
        }
        
        stage('Notify Deployment Start') {
            steps {
                echo 'Notifying drifts API: Deployment started...'
                script {
                    def apiUrl = env.DRIFTS_API_URL
                    def appStack = env.APPSTACK_NAME
                    echo "API URL: ${apiUrl}"
                    echo "AppStack: ${appStack}"
                    def response = sh(
                        script: """
                            curl -X POST '${apiUrl}' \
                                -H 'Content-Type: application/json' \
                                -d '{
                                    \"appStack\": \"${appStack}\",
                                    \"runStatus\": \"running\"
                                }' \
                                -w \"\\nHTTP Status: %{http_code}\\n\" \
                                -f -v
                        """,
                        returnStdout: true
                    )
                    echo "API Response: ${response}"
                }
            }
        }
        
        stage('Terraform Init') {
            steps {
                echo 'Initializing Terraform...'
                withCredentials([
                    string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                ]) {
                    sh '''
                        export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
                        export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
                        export AWS_SESSION_TOKEN="${AWS_SESSION_TOKEN}"
                        export AWS_DEFAULT_REGION="us-east-1"
                        
                        # Check if env/dev.tfvars exists
                        if [ ! -f "env/dev.tfvars" ]; then
                            echo "ERROR: env/dev.tfvars file not found!"
                            echo "Current directory: $(pwd)"
                            echo "Files in current directory:"
                            ls -la
                            echo "Files in env directory:"
                            ls -la env/ || echo "env directory does not exist"
                            exit 1
                        fi
                        
                        echo "AWS credentials configured via environment variables"
                        echo "Initializing Terraform..."
                        terraform init
                    '''
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                echo 'Running Terraform plan...'
                withCredentials([
                    string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                ]) {
                    sh '''
                        export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
                        export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
                        export AWS_SESSION_TOKEN="${AWS_SESSION_TOKEN}"
                        export AWS_DEFAULT_REGION="us-east-1"
                        terraform plan -var-file=env/dev.tfvars
                    '''
                }
            }
        }
        
        stage('Notify Plan Complete') {
            steps {
                echo 'Notifying drifts API: Terraform plan completed...'
                script {
                    def apiUrl = env.DRIFTS_API_URL
                    def appStack = env.APPSTACK_NAME
                    echo "API URL: ${apiUrl}"
                    echo "AppStack: ${appStack}"
                    def response = sh(
                        script: """
                            curl -X POST '${apiUrl}' \
                                -H 'Content-Type: application/json' \
                                -d '{
                                    \"appStack\": \"${appStack}\",
                                    \"runStatus\": \"completed\"
                                }' \
                                -w \"\\nHTTP Status: %{http_code}\\n\" \
                                -f -v
                        """,
                        returnStdout: true
                    )
                    echo "API Response: ${response}"
                }
            }
        }
        
        stage('Terraform Apply') {
            steps {
                echo 'Applying Terraform configuration...'
                withCredentials([
                    string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                ]) {
                    sh '''
                        export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
                        export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
                        export AWS_SESSION_TOKEN="${AWS_SESSION_TOKEN}"
                        export AWS_DEFAULT_REGION="us-east-1"
                        terraform apply -var-file=env/dev.tfvars -auto-approve
                    '''
                }
            }
        }
    }
    
    post {
        success {
            echo 'Terraform deployment completed successfully!'
        }
        failure {
            echo 'Terraform deployment failed. Check logs for details.'
            script {
                // Update status to failed if deployment fails
                try {
                    def apiUrl = env.DRIFTS_API_URL
                    def appStack = env.APPSTACK_NAME
                    echo "Updating drifts API: AppStack=${appStack}, Status=failed"
                    def response = sh(
                        script: """
                            curl -X POST '${apiUrl}' \
                                -H 'Content-Type: application/json' \
                                -d '{
                                    \"appStack\": \"${appStack}\",
                                    \"runStatus\": \"failed\"
                                }' \
                                -w \"\\nHTTP Status: %{http_code}\\n\" \
                                -f -v
                        """,
                        returnStdout: true
                    )
                    echo "API Response: ${response}"
                } catch (Exception e) {
                    echo "Failed to update drifts API: ${e.getMessage()}"
                }
            }
        }
        always {
            echo 'Cleaning up workspace...'
            deleteDir()
        }
    }
}

