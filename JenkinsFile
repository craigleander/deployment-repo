pipeline {
    agent any
    
    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
        AWS_SESSION_TOKEN = credentials('aws-session-token')
        AWS_DEFAULT_REGION = 'us-east-1'
        GIT_REPO = 'https://github.com/craigleander/deployment-repo.git'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from GitHub repository...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: env.GIT_REPO,
                        credentialsId: 'github-credentials'
                    ]]
                ])
            }
        }
        
        stage('Install Terraform') {
            steps {
                echo 'Installing Terraform...'
                sh '''
                    # Set up PATH first
                    mkdir -p ~/bin
                    export PATH="$HOME/bin:$PATH"
                    
                    # Check if Terraform exists and works
                    TERRAFORM_INSTALLED=false
                    if command -v terraform >/dev/null 2>&1; then
                        # Command exists, try to run it
                        if terraform version >/dev/null 2>&1; then
                            TERRAFORM_INSTALLED=true
                        fi
                    fi
                    
                    if [ "$TERRAFORM_INSTALLED" = "true" ]; then
                        echo "Terraform is already installed:"
                        terraform version
                    else
                        echo "Terraform not found or not working. Installing Terraform..."
                        
                        # Try to install dependencies (may require sudo or may not be needed)
                        if command -v apt-get &> /dev/null; then
                            sudo apt-get update -qq || apt-get update -qq || true
                            sudo apt-get install -y -qq wget unzip curl || apt-get install -y -qq wget unzip curl || true
                        elif command -v yum &> /dev/null; then
                            sudo yum install -y -q wget unzip curl || yum install -y -q wget unzip curl || true
                        fi
                        
                        # Check if wget or curl is available
                        if ! command -v wget &> /dev/null && ! command -v curl &> /dev/null; then
                            echo "ERROR: Neither wget nor curl is available. Cannot download Terraform."
                            exit 1
                        fi
                        
                        # Set Terraform version (adjust as needed)
                        TERRAFORM_VERSION="1.6.0"
                        TERRAFORM_ZIP="terraform_${TERRAFORM_VERSION}_linux_amd64.zip"
                        
                        # Download Terraform
                        if command -v wget &> /dev/null; then
                            wget -q "https://releases.hashicorp.com/terraform/${TERRAFORM_VERSION}/${TERRAFORM_ZIP}" -O /tmp/${TERRAFORM_ZIP}
                        else
                            curl -s -L "https://releases.hashicorp.com/terraform/${TERRAFORM_VERSION}/${TERRAFORM_ZIP}" -o /tmp/${TERRAFORM_ZIP}
                        fi
                        
                        # Check if download was successful
                        if [ ! -f /tmp/${TERRAFORM_ZIP} ]; then
                            echo "ERROR: Failed to download Terraform"
                            exit 1
                        fi
                        
                        # Unzip and install to user directory
                        unzip -q /tmp/${TERRAFORM_ZIP} -d ~/bin/
                        
                        # Make executable
                        chmod +x ~/bin/terraform
                        
                        # Verify installation by actually running terraform
                        if [ -f ~/bin/terraform ] && ~/bin/terraform version >/dev/null 2>&1; then
                            echo "✓ Terraform installed successfully:"
                            terraform version
                        else
                            echo "✗ ERROR: Terraform installation failed - terraform not working"
                            echo "PATH: $PATH"
                            ls -la ~/bin/ || echo "~/bin directory not found"
                            command -v terraform || echo "terraform not found in PATH"
                            exit 1
                        fi
                        
                        # Cleanup
                        rm -f /tmp/${TERRAFORM_ZIP}
                    fi
                '''
            }
        }
        
        stage('Terraform Init') {
            steps {
                echo 'Initializing Terraform...'
                withCredentials([
                    string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                ]) {
                    sh '''
                        export PATH="$HOME/bin:$PATH"
                        export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
                        export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
                        export AWS_SESSION_TOKEN="${AWS_SESSION_TOKEN}"
                        export AWS_DEFAULT_REGION="us-east-1"
                        
                        # Check if env/dev.tfvars exists
                        if [ ! -f "env/dev.tfvars" ]; then
                            echo "ERROR: env/dev.tfvars file not found!"
                            echo "Current directory: $(pwd)"
                            echo "Files in current directory:"
                            ls -la
                            echo "Files in env directory:"
                            ls -la env/ || echo "env directory does not exist"
                            exit 1
                        fi
                        
                        echo "AWS credentials configured via environment variables"
                        echo "Initializing Terraform..."
                        terraform init
                    '''
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                echo 'Running Terraform plan...'
                withCredentials([
                    string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                ]) {
                    sh '''
                        export PATH="$HOME/bin:$PATH"
                        export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
                        export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
                        export AWS_SESSION_TOKEN="${AWS_SESSION_TOKEN}"
                        export AWS_DEFAULT_REGION="us-east-1"
                        terraform plan -var-file=env/dev.tfvars
                    '''
                }
            }
        }
        
        stage('Terraform Apply') {
            steps {
                echo 'Applying Terraform configuration...'
                withCredentials([
                    string(credentialsId: 'aws-access-key-id', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'aws-secret-access-key', variable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'aws-session-token', variable: 'AWS_SESSION_TOKEN')
                ]) {
                    sh '''
                        export PATH="$HOME/bin:$PATH"
                        export AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
                        export AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
                        export AWS_SESSION_TOKEN="${AWS_SESSION_TOKEN}"
                        export AWS_DEFAULT_REGION="us-east-1"
                        terraform apply -var-file=env/dev.tfvars -auto-approve
                    '''
                }
            }
        }
    }
    
    post {
        success {
            echo 'Terraform deployment completed successfully!'
        }
        failure {
            echo 'Terraform deployment failed. Check logs for details.'
        }
        always {
            echo 'Cleaning up workspace...'
            deleteDir()
        }
    }
}
